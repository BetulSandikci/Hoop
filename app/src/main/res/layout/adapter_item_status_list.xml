<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/taps_padding"
    tools:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imgStatusProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@drawable/ic_photo_camera_24dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="EMINE SANDIKCI" />

        <TextView
            android:id="@+id/statusDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/subText_text_size"
            tools:text="Today 21:32" />


    </LinearLayout>

</LinearLayout>