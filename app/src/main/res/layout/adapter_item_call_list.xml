<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/taps_padding"
    tools:background="@color/colorPrimary">

    <ImageView
            android:id="@+id/imgCallProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="@drawable/ic_person_outline_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/callUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="HACER SANDIKCI"

            />

        <TextView
            android:id="@+id/callDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/subText_text_size"
            tools:text="15.04.2019  23:23"

            />

    </LinearLayout>

    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@drawable/ic_local_phone_black_24dp" />
</LinearLayout>